---
layout: null
sitemap: false
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  {% for post in site.posts %}
    {% unless post.sitemap == false or post.published == false %}
    <url>
      <loc>{{ site.url }}{{ post.url }}</loc>
      <lastmod>
        {%- if post.last_modified_at -%}
          {{ post.last_modified_at | date_to_xmlschema }}
        {%- elsif post.date -%}
          {{ post.date | date_to_xmlschema }}
        {%- else -%}
          {{ "now" | date_to_xmlschema }}
        {%- endif -%}
      </lastmod>
      <changefreq>{{ post.sitemap.changefreq | default: 'monthly' }}</changefreq>
      <priority>{{ post.sitemap.priority   | default: '0.6' }}</priority>
    </url>
    {% endunless %}
  {% endfor %}

  {% for page in site.pages %}
    {% unless page.sitemap == false or page.path contains '404' or page.path contains 'sitemap.xml' or page.path contains '.css' or page.path contains '.js' %}
    <url>
      <loc>{{ site.url }}{{ page.url }}</loc>
      <lastmod>
        {%- if page.last_modified_at -%}
          {{ page.last_modified_at | date_to_xmlschema }}
        {%- else -%}
          {{ "now" | date_to_xmlschema }}
        {%- endif -%}
      </lastmod>
      <changefreq>{{ page.sitemap.changefreq | default: 'monthly' }}</changefreq>
      <priority>{{ page.sitemap.priority   | default: '0.5' }}</priority>
    </url>
    {% endunless %}
  {% endfor %}
</urlset>